<main class="container">
  <div class="header border border-dark rounded mt-3 bg-light-gray">
    <ul class="align-middle list-unstyled p-3 m-0">
      <li class="d-inline">
        Sort By:
      </li>
      <li class="d-inline">
        <%= link_to "Likes", movies_path(filter: 'likes') %>
      </li>
      <li class="d-inline"> | </li>
      <li class="d-inline">
        <%= link_to "Hates", movies_path(filter: 'hates') %>
      </li>
      <li class="d-inline"> | </li>
      <li class="d-inline">
        <%= link_to "Date", movies_path(filter: 'date') %>
      </li>
    </ul>
  </div>

  <% if user_signed_in? %>
    <div class="header">
      <%= link_to "New movie",
                  new_movie_path,
                  class: "btn btn--primary" %>
    </div>
  <% end %>

  <%= render @movies %>

  <%= will_paginate @movies %>
</main>
