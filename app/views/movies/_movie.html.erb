<div class="movie">
  <h2>
    <%= movie.title %>
  </h2>
  <div>
    <%= movie.description %>
  </div>
  <div class="movie__actions">
    <%= button_to "Delete",
                  movie_path(movie),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit",
                edit_movie_path(movie),
                class: "btn btn--light" %>
  </div>
</div>
