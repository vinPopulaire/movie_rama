<div class="movie">
  <h2>
    <%= movie.title %>
  </h2>
  <div>
    Posted by
    <%= link_to movie.user.fullname,
                movies_path(filter: 'user', user_id: movie.user.id) %>
    <%= time_ago(movie.created_at) %>
  </div>
  <div>
    <%= movie.description %>
  </div>
  <% if user_signed_in? %>
    <div class="movie__actions">
      <%= button_to "Delete",
                    movie_path(movie),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_movie_path(movie),
                  class: "btn btn--light" %>
    </div>
  <% end %>
</div>
